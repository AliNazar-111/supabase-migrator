{
    "name": "supabase-migrator",
    "version": "1.0.0",
    "description": "Complete migration and cleanup toolkit for Supabase PostgreSQL databases",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "supabase-migrator": "dist/bin/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "clean": "rm -rf dist",
        "test": "jest",
        "lint": "eslint 'src/**/*.ts' 'bin/**/*.ts'",
        "format": "prettier --write 'src/**/*.ts' 'bin/**/*.ts'",
        "prepublishOnly": "npm run clean && npm run build"
    },
    "keywords": [
        "supabase",
        "migration",
        "postgres",
        "postgresql",
        "database",
        "backup",
        "restore",
        "cleanup"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@supabase/supabase-js": "^2.89.0",
        "chalk": "^4.1.2",
        "cli-table3": "^0.6.3",
        "commander": "^11.1.0",
        "ora": "^5.4.1",
        "pg": "^8.16.3"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^20.10.0",
        "@types/pg": "^8.10.9",
        "@typescript-eslint/eslint-plugin": "^8.51.0",
        "@typescript-eslint/parser": "^8.51.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "jest": "^30.2.0",
        "prettier": "^3.7.4",
        "ts-jest": "^29.4.6",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=14.0.0"
    }
}